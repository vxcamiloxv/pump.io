#loginpage
  form.form-horizontal#login(method="post", action="/main/javascript-disabled")
    legend #{t('Login to your account')}
    .control-group#nickname-group
      label.control-label(for="nickname") #{t('Nickname')}
      .controls
        input#nickname(type="text", name="nickname", size="16")

    .control-group#password-group
      label.control-label(for="password") #{t('Password')}
      .controls
        input#password(type="password", name="password", size="16")
        if config.haveEmail
          | &nbsp;
          a(href="/main/recover") #{t('Forgot your password?')}

    .control-group
      .controls
        button.btn.btn-primary(type="submit", disabled="disabled") #{t('Login')}
  
  if config.disableRegistration
    p.text-warning #{t('Registrations disabled for new users')}
  else
    p
      a.add-continue(href="/main/register") #{t('New user?')}
  
  p
    a.add-continue(href="/main/remote") #{t('Account on another server?')}
